<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
</head>
<body>
    <h1>restablecer la contrase√±a</h1>
    <label for="email">Email:</label>
    <input type="email" id="email" id="email" name="email" required>
    <button type="submit" id="btn-forgot-password">Send Reset Email</button>
</body>
</html>

<script>
    const button = document.getElementById('btn-forgot-password')
    button.addEventListener('click', async () => {
        const email = document.getElementById('email').value;
        const res = await fetch(`/api/sessions/forgot-password`, {
            method: 'POST',
            headers: { "Content-type": "application/json; charset=UTF-8" },
            body: JSON.stringify({ email: email })
        })
        console.log(res)
    })  
</script>